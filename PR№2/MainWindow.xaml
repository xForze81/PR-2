<Window x:Class="SnakeGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Snake Game" Width="1000" Height="700" KeyDown="Window_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Canvas x:Name="gameCanvas" Grid.Row="0" Background="gray" Margin="0,0,0,21" Grid.RowSpan="2" />
        <TextBlock x:Name="scoreText" Grid.Row="1" Foreground="White" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
